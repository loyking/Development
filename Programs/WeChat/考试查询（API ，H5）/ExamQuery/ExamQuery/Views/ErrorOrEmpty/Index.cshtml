
@{
    ViewBag.Title = "服务暂未开通";
    Layout = "~/Views/Shared/layout.cshtml";
}

@section link{
    <style>
        .container {
            width: 6.52rem;
            height: 6.28rem;
            background-color: white;
            border-radius: 0.1rem;
            margin: 0px auto;
            position: relative;
            top: 0.44rem;
        }

        .box {
            width: 100%;
            text-align: center;
        }

        .img {
            width: 1.5rem;
            height: 1.5rem;
        }

        .emptyTetx {
            font-family: PingFangSC-Medium;
            font-size: 0.36rem;
            padding-top: 0.80rem;
            font-weight: bold;
        }

        .home {
            width: 6.52rem;
            height: 1.06rem;
            line-height: 1.06rem;
            background-color: rgb(23,144,251);
            color: white;
            border-radius: 0.1rem;
            font-size: 0.36rem;
            margin: 0px auto;
            text-align: center;
            position: relative;
            top: 1.20rem;
        }

        .footer {
            width: 100%;
            height: 1.50rem;
            background-color: #E5E5E5;
            font-size: 0.30rem;
            line-height: 1.50rem;
            position: relative;
            bottom: -150px;
        }

        .btn {
            width: 1.65rem;
            height: 0.74rem;
            position: absolute;
            top: 0.40rem;
            right: 0.45rem;
            font-size: 0.26rem;
            background-color: rgb(55,108,177);
            color: white;
            border: 0.2px solid rgb(55,108,177);
            border-radius: 0.1rem;
            display: none;
        }

        a {
            text-decoration: none;
            color: white;
        }

        @@media screen and (max-width: 750px) {
            .footer {
                position: absolute;
                bottom: 0px;
            }
        }
    </style>
}

<div class="container">
    <div class="box">
        <div style="padding-top:1.32rem"><img class="img" src="~/Img/invalidName.png" /></div>
        <div class="emptyTetx" style="">服务暂未开通</div>
    </div>
</div>

<a href="/Home/"><div class="home" id="Home">回到首页</div></a>

<div class="footer">
    <text id="Text"></text>
    <button class="btn" id="footerBtn"></button>
</div>

@section script{
    <script type="text/javascript" src="~/Script/jquery-1.10.2.min.js"></script>
    <script type="text/javascript">
        $(function () {

            $.ajax({
                type: "GET",
                url: "/ErrorOrEmpty/getFooter",
                success: function (data) {
                    $("#Text").text(data.Text)
                    if (data.BtnText != "") {
                        $("#footerBtn").css("display", "block").text(data.BtnText)
                        $(" #Text").css("padding-left", "0.1rem")
                    }
                    else {
                        $(".footer").css("text-align", "center")
                    }
                }
            })
        })
    </script>
}

