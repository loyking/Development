.select_box{position: relative; width: 215rpx; height: 72rpx;}
.select{ box-sizing: border-box;width: 100%;height: 70rpx;border-radius: 8rpx;display: flex;
align-items: center;padding: 0 20rpx;}
.select_text{font-size: 30rpx;flex: 1;}
.select_img{width: 40rpx;height: 40rpx;display: block;transition:transform 0.3s;}
.select_img_rotate{transform:rotate(180deg); }
.option_box{position: absolute;width: 100%;z-index: 10;box-sizing: border-box;height: 0;
overflow-y: auto;border-top: 0;background: #fff;transition: height 0.3s;}
.option{display: block;line-height: 40rpx;font-size: 30rpx;padding: 10rpx;border: 1px solid rgba(151,151,151,0.29);}
.border{border: 2rpx solid rgba(151,151,151,0.29); border-radius: 10rpx;position: relative;}

